doctype html
html
	include ../head
	body
		include ../navbar
		
		.wrapper
			.header
			.container-fluid
				.row.top7
					.col.col-md-5.col-md-offset-3.col-sm-7.col-sm-offset-3
						.panel
							.panel-body
								img.img-responsive.col.col-xs-12.img100(src='/img/userDefault.svg')
								.col.col-xs-12.top7
									h3.text-center #{usuarioPerfil.nome}
								.col.col-sm-4.col-sm-offset-4.col-xs-6.col-xs-offset-3
									button#btnSeguir.btn.btn-primary.btn-sm.btn-block(onclick='seguir("#{usuarioPerfil._id}")')
										if isSegue
											| Seguindo
										else
											| Seguir
								.col.col-xs-12.top7
									.text-center
										| seguindo 
										b #{usuarioPerfil.seguindo.length}
									.text-center
										| posts 
										b #{posts.length}
				each post in posts
					.row.top7
						.col.col-md-5.col-md-offset-3
							.panel
								.panel-heading
									a(href="/u/#{post.dono.nome}")
										| #{post.dono.nome}
								.panel-body
									.text-center
										img.img-responsive(src="../img/post/#{post.imagem}")
								.panel-heading
									if post.isCurte
										- var liked='btnLikeCurtido'
									else
										- var liked=''
									i.fa.fa-heart.fa-2.pointer.btnLike(id="btnLike#{post._id}", class="#{liked}", aria-hidden="true", onclick='curtir("#{post._id}")')

									span.qCurtiu(id="qCurtiu#{post._id}") #{post.curtiu.length}

				button.fixed-right-bottom.btn.btn-primary.btn-fab.btn-fab-mini.btn-round
					i.material-icons camera_alt